<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:dropDownSelector="@android:color/holo_blue_bright"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:contextClickable="false"
        android:contentDescription="@android:string/search_go"
        android:clickable="false"
        android:layoutMode="clipBounds"
        android:longClickable="true"
        android:popupBackground="@color/accent_material_light"
        android:popupElevation="@dimen/disabled_alpha_material_dark"
        android:spinnerMode="dialog"
        android:theme="@style/Base.Widget.AppCompat.ListPopupWindow"
        android:background="#46526297"
        android:foreground="#0504060b"
        android:popupTheme="@color/button_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrive Usage"
        android:id="@+id/button"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:onClick="RetriveDetails"
        android:clickable="true" />


    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:singleLine="true"
        android:hint="Enter Application Name"/>
</RelativeLayout>
